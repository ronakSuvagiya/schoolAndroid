<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:orientation="vertical">

    <FrameLayout
        n1:id="@+id/container_frame1"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_weight="1.0" />

    <com.google.android.material.tabs.TabLayout xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/tabs"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:background="@color/colorPrimary"
        n2:tabIndicatorColor="#ffffffff"
        n2:tabSelectedTextColor="#ffffffff"
        n2:tabTextAppearance="@style/Tablayout_Text_Appearance"
        n2:tabTextColor="#99ffffff" />
</LinearLayout>