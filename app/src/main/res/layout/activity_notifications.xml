<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent">

    <ScrollView
        style="@style/Scrollview_Style"
        n1:background="@color/background">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:orientation="vertical"
            n1:padding="@dimen/_12sdp">

            <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n2:cardBackgroundColor="#ffffffff"
                n2:cardCornerRadius="@dimen/_6sdp"
                n2:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <ImageButton
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:background="@color/blue_grey_500"
                        n1:padding="@dimen/_8sdp"
                        n1:src="@drawable/img_notification1" />

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:background="@drawable/borders_rltb"
                        n1:orientation="vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:fontFamily="sans-serif-condensed"
                            n1:lineSpacingMultiplier="1.3"
                            n1:text="Holiday on 29th March on the eve of UGADI festival"
                            n1:textSize="16.0sp" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="bottom|center|right"
                            n1:layout_marginTop="@dimen/_8sdp">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text=" 10:57 AM  "
                                n1:textSize="12.0sp" />

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="13 Oct 2017"
                                n1:textColor="@color/colorPrimary"
                                n1:textSize="13.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n3="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n3:cardBackgroundColor="#ffffffff"
                n3:cardCornerRadius="@dimen/_6sdp"
                n3:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <ImageButton
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:background="@color/blue_grey_500"
                        n1:padding="@dimen/_8sdp"
                        n1:src="@drawable/img_notification1" />

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:background="@drawable/borders_rltb"
                        n1:orientation="vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:id="@+id/textView3"
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:fontFamily="sans-serif-condensed"
                            n1:lineSpacingMultiplier="1.3"
                            n1:text="Annual Day celebrations held on 31st March Friday. Passes will be given on 29th March at Admission Block."
                            n1:textSize="16.0sp" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="bottom|center|right"
                            n1:layout_marginTop="@dimen/_8sdp">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text=" 11:46 AM  "
                                n1:textSize="12.0sp" />

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="11 Oct 2017"
                                n1:textColor="@color/colorPrimary"
                                n1:textSize="13.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n4="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n4:cardBackgroundColor="#ffffffff"
                n4:cardCornerRadius="@dimen/_6sdp"
                n4:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <ImageButton
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:background="@color/blue_grey_500"
                        n1:padding="@dimen/_8sdp"
                        n1:src="@drawable/img_notification1" />

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:background="@drawable/borders_rltb"
                        n1:orientation="vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:fontFamily="sans-serif-condensed"
                            n1:lineSpacingMultiplier="1.3"
                            n1:text="For Class 1 to 10th admission process would commence in Feb 2017 as admissions are subjected to availability"
                            n1:textSize="16.0sp" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="bottom|center|right"
                            n1:layout_marginTop="@dimen/_8sdp">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text=" 01:52 PM  "
                                n1:textSize="12.0sp" />

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="08 Oct 2017"
                                n1:textColor="@color/colorPrimary"
                                n1:textSize="13.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n5="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n5:cardBackgroundColor="#ffffffff"
                n5:cardCornerRadius="@dimen/_6sdp"
                n5:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <ImageButton
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:background="@color/blue_grey_500"
                        n1:padding="@dimen/_8sdp"
                        n1:src="@drawable/img_notification1" />

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:background="@drawable/borders_rltb"
                        n1:orientation="vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:id="@+id/textView4"
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:fontFamily="sans-serif-condensed"
                            n1:lineSpacingMultiplier="1.3"
                            n1:text="School classes for summer holidays on 12th April 2017"
                            n1:textSize="16.0sp" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="bottom|center|right"
                            n1:layout_marginTop="@dimen/_8sdp">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text=" 03:32 PM  "
                                n1:textSize="12.0sp" />

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:text="05 Oct 2017"
                                n1:textColor="@color/colorPrimary"
                                n1:textSize="13.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ListView
                n1:id="@+id/listview_notifications"
                style="@style/ListView_Style" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>