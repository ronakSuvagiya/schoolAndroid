<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@android:color/transparent">

    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/cardview"
        n1:layout_width="fill_parent"
        n1:layout_height="fill_parent"
        n1:layout_margin="@dimen/_8sdp"
        n2:cardBackgroundColor="#fffdfefe"
        n2:cardCornerRadius="@dimen/_10sdp"
        n2:cardElevation="@dimen/_5sdp"
        n2:contentPadding="@dimen/_4sdp">

        <LinearLayout
            n1:layout_width="wrap_content"
            n1:layout_height="wrap_content"
            n1:layout_gravity="center"
            n1:gravity="center"
            n1:orientation="vertical">

            <ImageView
                n1:id="@+id/image"
                n1:layout_width="@dimen/_50sdp"
                n1:layout_height="@dimen/_50sdp"
                n1:scaleType="fitCenter"
                n1:src="@mipmap/ic_launcher" />

            <TextView
                n1:id="@+id/image_title"
                n1:layout_width="wrap_content"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center_horizontal"
                n1:ellipsize="middle"
                n1:gravity="center"
                n1:maxLines="2"
                n1:minLines="2"
                n1:padding="@dimen/_4sdp"
                n1:text="Assignment"
                n1:textSize="14.0sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>