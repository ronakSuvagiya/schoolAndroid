<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent">

    <ScrollView
        style="@style/Scrollview_Style"
        n1:background="@color/background">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:orientation="vertical"
            n1:padding="@dimen/_12sdp">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n1:gravity="center">

                <LinearLayout
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_weight="1.0"
                    n1:gravity="center">

                    <View
                        n1:layout_width="20.0dip"
                        n1:layout_height="20.0dip"
                        n1:background="@android:color/holo_blue_dark" />

                    <TextView
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:paddingLeft="10.0dip"
                        n1:text="Positive" />
                </LinearLayout>

                <LinearLayout
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginLeft="20.0dip"
                    n1:layout_weight="1.0"
                    n1:gravity="center">

                    <View
                        n1:layout_width="20.0dip"
                        n1:layout_height="20.0dip"
                        n1:background="@android:color/holo_orange_dark" />

                    <TextView
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:paddingLeft="10.0dip"
                        n1:text="Negative" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginTop="@dimen/_10sdp"
                n1:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center_vertical"
                    n1:layout_margin="14.0dip"
                    n1:background="@drawable/dotted_underline"
                    n1:text="Sort By"
                    n1:textSize="16.0sp"
                    n1:textStyle="bold" />

                <FrameLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_gravity="center_vertical"
                    n1:background="@drawable/borders_rltb_white_background">

                    <Spinner
                        n1:id="@+id/spnr_month"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:entries="@array/months"
                        n1:paddingLeft="@dimen/_10sdp" />
                </FrameLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_margin="5.0dip"
                n1:layout_marginBottom="@dimen/_8sdp"
                n1:visibility="gone"
                n2:cardCornerRadius="5.0dip"
                n2:cardElevation="3.0dip">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <LinearLayout
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:layout_gravity="center"
                        n1:background="@android:color/holo_blue_dark"
                        n1:gravity="center_vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:id="@+id/date"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:text="18"
                            n1:textColor="#ffffffff"
                            n1:textSize="22.0sp"
                            n1:textStyle="bold" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_marginLeft="10.0dip"
                            n1:gravity="center"
                            n1:orientation="vertical">

                            <TextView
                                n1:id="@+id/month"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:gravity="center"
                                n1:text="Aug"
                                n1:textColor="#ffffffff"
                                n1:textSize="18.0sp" />

                            <TextView
                                n1:id="@+id/year"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:gravity="center"
                                n1:text="2017"
                                n1:textColor="#ffffffff"
                                n1:textSize="13.0sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="fill_parent"
                        n1:layout_gravity="center"
                        n1:gravity="center_vertical"
                        n1:lineSpacingMultiplier="1.2"
                        n1:padding="@dimen/_8sdp"
                        n1:text="Your son is learning to become a great listener."
                        n1:textSize="15.0sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n3="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_margin="5.0dip"
                n1:visibility="gone"
                n3:cardCornerRadius="5.0dip"
                n3:cardElevation="3.0dip">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content">

                    <LinearLayout
                        n1:layout_width="wrap_content"
                        n1:layout_height="fill_parent"
                        n1:layout_gravity="center"
                        n1:background="@android:color/holo_orange_dark"
                        n1:gravity="center_vertical"
                        n1:padding="@dimen/_8sdp">

                        <TextView
                            n1:id="@+id/date1"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:text="24"
                            n1:textColor="#ffffffff"
                            n1:textSize="22.0sp"
                            n1:textStyle="bold" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_marginLeft="10.0dip"
                            n1:gravity="center"
                            n1:orientation="vertical">

                            <TextView
                                n1:id="@+id/month1"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:gravity="center"
                                n1:text="Aug"
                                n1:textColor="#ffffffff"
                                n1:textSize="18.0sp" />

                            <TextView
                                n1:id="@+id/year1"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:gravity="center"
                                n1:text="2017"
                                n1:textColor="#ffffffff"
                                n1:textSize="13.0sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="fill_parent"
                        n1:layout_gravity="center"
                        n1:gravity="center_vertical"
                        n1:lineSpacingMultiplier="1.2"
                        n1:padding="@dimen/_8sdp"
                        n1:text="He has difficulty understanding the material."
                        n1:textSize="15.0sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ListView
                n1:id="@+id/listview_remarks"
                style="@style/ListView_Style" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>