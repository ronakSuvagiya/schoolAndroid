<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:divider="@drawable/divider">

    <TextView
        n1:id="@+id/subject"
        n1:layout_width="100.0dip"
        n1:layout_height="wrap_content"
        n1:background="@drawable/borders_r"
        n1:gravity="center"
        n1:padding="@dimen/_8sdp"
        n1:text="English"
        n1:textSize="13.0sp"
        n1:textStyle="bold" />

    <TextView
        n1:id="@+id/obtained"
        n1:layout_width="100.0dip"
        n1:layout_height="wrap_content"
        n1:background="@drawable/borders_r"
        n1:gravity="center"
        n1:padding="@dimen/_8sdp"
        n1:text="90"
        n1:textSize="13.0sp" />

    <TextView
        n1:id="@+id/total"
        n1:layout_width="100.0dip"
        n1:layout_height="wrap_content"
        n1:background="@drawable/borders_r"
        n1:gravity="center"
        n1:padding="@dimen/_8sdp"
        n1:text="50"
        n1:textSize="13.0sp" />

    <TextView
        n1:id="@+id/result"
        n1:layout_width="100.0dip"
        n1:layout_height="wrap_content"
        n1:background="@drawable/borders_r"
        n1:gravity="center"
        n1:padding="@dimen/_8sdp"
        n1:text="Pass"
        n1:textColor="@android:color/holo_green_dark"
        n1:textSize="13.0sp" />

    <TextView
        n1:id="@+id/grade"
        n1:layout_width="100.0dip"
        n1:layout_height="wrap_content"
        n1:gravity="center"
        n1:padding="@dimen/_8sdp"
        n1:text="A"
        n1:textSize="13.0sp" />
</TableRow>