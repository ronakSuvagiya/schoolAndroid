<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content">

    <include
        layout="@layout/layout_loading"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_gravity="center" />

    <LinearLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content">

        <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:layout_margin="@dimen/_8sdp"
            n2:cardBackgroundColor="#ffffffff"
            n2:cardCornerRadius="@dimen/_6sdp"
            n2:cardElevation="@dimen/_5sdp">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content">

                <ImageButton
                    n1:layout_width="wrap_content"
                    n1:layout_height="fill_parent"
                    n1:background="@color/blue_grey_500"
                    n1:padding="@dimen/_8sdp"
                    n1:src="@drawable/img_notification1" />

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb"
                    n1:orientation="vertical"
                    n1:padding="@dimen/_8sdp">

                    <TextView
                        n1:id="@+id/notification_title"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:layout_marginBottom="@dimen/_10sdp"
                        n1:lineSpacingMultiplier="1.2"
                        n1:textColor="@color/colorPrimary"
                        n1:textSize="@dimen/_14ssp"
                        n1:textStyle="bold" />

                    <TextView
                        n1:id="@+id/notification_message"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:fontFamily="@font/andika_regular"
                        n1:lineSpacingMultiplier="1.1"
                        n1:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="bottom|center|right"
                        n1:layout_marginTop="@dimen/_8sdp">

                        <TextView
                            n1:id="@+id/notification_time"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:fontFamily="@font/montserrat_bold"
                            n1:textColor="@color/grey"
                            n1:textSize="@dimen/_11ssp" />

                        <View
                            n1:layout_width="10.0dip"
                            n1:layout_height="10.0dip" />

                        <TextView
                            n1:id="@+id/notification_date"
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:textColor="@color/red200"
                            n1:textSize="@dimen/_11ssp"
                            n1:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>