<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/action_container"
    style="@style/Widget.Compat.NotificationActionContainer"
    n1:layout_width="0.0dip"
    n1:layout_height="48.0dip"
    n1:layout_weight="1.0"
    n1:orientation="horizontal"
    n1:paddingStart="4.0dip">

    <ImageView
        n1:id="@+id/action_image"
        n1:layout_width="@dimen/notification_action_icon_size"
        n1:layout_height="@dimen/notification_action_icon_size"
        n1:layout_gravity="start|center"
        n1:scaleType="centerInside" />

    <TextView
        n1:id="@+id/action_text"
        style="@style/Widget.Compat.NotificationActionText"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_gravity="start|center"
        n1:clickable="false"
        n1:ellipsize="end"
        n1:paddingStart="4.0dip"
        n1:singleLine="true" />
</LinearLayout>