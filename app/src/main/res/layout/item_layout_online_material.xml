<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/cardview"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_margin="10.0dip"
        n2:cardBackgroundColor="@android:color/transparent"
        n2:cardCornerRadius="@dimen/_6sdp"
        n2:cardElevation="@dimen/_5sdp">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:background="@drawable/borders_rltb_littlewhite"
            n1:orientation="vertical"
            n1:padding="@dimen/_8sdp">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:gravity="center_vertical">

                <TextView
                    n1:id="@+id/subject"
                    style="@style/Textview_Style_Header"
                    n1:layout_height="fill_parent"
                    n1:layout_weight="1.0"
                    n1:gravity="center_vertical"
                    n1:text="Telugu"
                    n1:textSize="20.0sp" />

                <ImageButton
                    n1:id="@+id/download"
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:background="@android:color/transparent"
                    n1:foreground="@drawable/touch_effect_rectangle"
                    n1:padding="@dimen/_4sdp"
                    n1:src="@drawable/img_download" />
            </LinearLayout>

            <TextView
                n1:id="@+id/attachment"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_gravity="center"
                n1:text="Chapter 02-Telugu.pdf"
                n1:textSize="16.0sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>