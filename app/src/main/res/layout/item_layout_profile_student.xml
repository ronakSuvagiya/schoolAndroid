<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/layout_studentprofile"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_margin="@dimen/_10sdp"
        n1:elevation="@dimen/_5sdp"
        n2:cardBackgroundColor="#f2ffffff"
        n2:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:orientation="vertical">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_margin="@dimen/_5sdp">

                <com.apps.smartschoolmanagement.utils.CircleImage
                    n1:id="@+id/student_photo"
                    n1:layout_width="@dimen/_50sdp"
                    n1:layout_height="@dimen/_50sdp"
                    n1:layout_gravity="bottom"
                    n1:src="@drawable/img_profile"
                    n2:civ_border_color="#ccffffff"
                    n2:civ_border_width="@dimen/_1sdp" />

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_weight="1.0"
                    n1:orientation="vertical"
                    n1:paddingLeft="@dimen/_5sdp"
                    n1:paddingRight="@dimen/_5sdp">

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:orientation="vertical">

                        <LinearLayout
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:layout_weight="1.0"
                            n1:gravity="center_vertical"
                            n1:padding="@dimen/_5sdp"
                            n1:paddingLeft="@dimen/_7sdp">

                            <TextView
                                n1:layout_width="0.0dip"
                                n1:layout_height="wrap_content"
                                n1:layout_weight="0.4"
                                n1:gravity="left"
                                n1:text="Name"
                                n1:textColor="#99000000"
                                n1:textSize="@dimen/_11ssp" />

                            <TextView
                                n1:id="@+id/student_name"
                                n1:layout_width="0.0dip"
                                n1:layout_height="wrap_content"
                                n1:layout_weight="0.7"
                                n1:gravity="left"
                                n1:paddingLeft="@dimen/_5sdp"
                                n1:textColor="#f2000000"
                                n1:textSize="@dimen/_12ssp"
                                n1:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            n1:id="@+id/layout_class"
                            n1:layout_width="fill_parent"
                            n1:layout_height="wrap_content"
                            n1:gravity="center_vertical"
                            n1:padding="@dimen/_5sdp">

                            <TextView
                                n1:layout_width="0.0dip"
                                n1:layout_height="wrap_content"
                                n1:layout_weight="0.4"
                                n1:text="Class"
                                n1:textColor="#99000000"
                                n1:textSize="@dimen/_11ssp" />

                            <TextView
                                n1:id="@+id/student_class"
                                n1:layout_width="0.0dip"
                                n1:layout_height="wrap_content"
                                n1:layout_weight="0.7"
                                n1:gravity="left"
                                n1:paddingLeft="@dimen/_5sdp"
                                n1:textColor="@color/blue_grey_600"
                                n1:textSize="@dimen/_12ssp"
                                n1:textStyle="bold" />
                        </LinearLayout>

                        <!--<LinearLayout-->
                            <!--n1:id="@+id/layout_roll"-->
                            <!--n1:layout_width="fill_parent"-->
                            <!--n1:layout_height="wrap_content"-->
                            <!--n1:gravity="center_vertical"-->
                            <!--n1:padding="@dimen/_5sdp">-->

                            <!--<TextView-->
                                <!--n1:layout_width="0.0dip"-->
                                <!--n1:layout_height="wrap_content"-->
                                <!--n1:layout_weight="0.4"-->
                                <!--n1:text="Admission No."-->
                                <!--n1:textColor="#99000000"-->
                                <!--n1:textSize="@dimen/_11ssp" />-->

                            <!--<TextView-->
                                <!--n1:id="@+id/student_roll"-->
                                <!--n1:layout_width="0.0dip"-->
                                <!--n1:layout_height="wrap_content"-->
                                <!--n1:layout_weight="0.7"-->
                                <!--n1:gravity="left"-->
                                <!--n1:paddingLeft="@dimen/_5sdp"-->
                                <!--n1:textColor="@color/blue_grey_600"-->
                                <!--n1:textSize="@dimen/_12ssp"-->
                                <!--n1:textStyle="bold" />-->
                        <!--</LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>