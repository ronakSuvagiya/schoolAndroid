<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent">

    <ScrollView
        style="@style/Scrollview_Style"
        n1:background="@color/background">

        <LinearLayout
            n1:id="@+id/root_layout"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:orientation="vertical">

            <LinearLayout
                n1:id="@+id/layout_action"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:orientation="vertical"
                n1:padding="@dimen/_12sdp">

                <FrameLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginBottom="@dimen/_16sdp"
                    n1:background="@drawable/borders_rltb_white_background">

                    <Spinner
                        n1:id="@+id/spnr_class"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:paddingLeft="@dimen/_4sdp" />
                </FrameLayout>

                <FrameLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb_white_background">

                    <Spinner
                        n1:id="@+id/spnr_student"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:paddingLeft="@dimen/_4sdp" />
                </FrameLayout>

                <com.apps.smartschoolmanagement.utils.ButtonTouchEffect
                    n1:id="@+id/btn_search"
                    style="@style/Button_Style"
                    n1:layout_gravity="center_horizontal"
                    n1:layout_marginTop="@dimen/_8sdp"
                    n1:background="@drawable/corner_rectangle"
                    n1:paddingLeft="@dimen/_35sdp"
                    n1:paddingRight="@dimen/_35sdp"
                    n1:text="Search" />
            </LinearLayout>

            <TextView
                n1:id="@+id/error"
                style="@style/TextFields_Error"
                n1:padding="@dimen/_10sdp"
                n1:text="No Records Found" />

            <LinearLayout
                n1:id="@+id/layout_fields"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:orientation="vertical"
                n1:visibility="visible">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_margin="16.0dip"
                    n1:orientation="vertical"
                    n1:paddingBottom="@dimen/_10sdp">

                    <FrameLayout
                        n1:layout_width="wrap_content"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center_horizontal"
                        n1:layout_marginBottom="@dimen/_16sdp">

                        <com.apps.smartschoolmanagement.utils.CircleDisplay
                            n1:id="@+id/circleDisplay1"
                            n1:layout_width="140.0dip"
                            n1:layout_height="140.0dip"
                            n1:layout_gravity="center" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:orientation="vertical">

                            <TextView
                                n1:id="@+id/paid_fee"
                                n1:layout_width="fill_parent"
                                n1:layout_height="wrap_content"
                                n1:gravity="center"
                                n1:textColor="#ffffffff"
                                n1:textSize="17.0sp"
                                n1:textStyle="bold" />

                            <View
                                n1:layout_width="fill_parent"
                                n1:layout_height="0.5dip"
                                n1:background="#ffffffff" />

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:layout_gravity="center"
                                n1:gravity="center"
                                n1:text="Paid Fee"
                                n1:textColor="#ffffffff"
                                n1:textSize="17.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content">

                        <FrameLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_marginLeft="20.0dip"
                            n1:layout_marginRight="20.0dip"
                            n1:layout_weight="1.0">

                            <LinearLayout
                                n1:layout_width="fill_parent"
                                n1:layout_height="fill_parent"
                                n1:background="@drawable/corner_rectangle"
                                n1:backgroundTint="#ff36be72"
                                n1:gravity="center"
                                n1:orientation="vertical"
                                n1:paddingLeft="20.0dip"
                                n1:paddingTop="5.0dip"
                                n1:paddingRight="20.0dip"
                                n1:paddingBottom="5.0dip">

                                <TextView
                                    n1:layout_width="wrap_content"
                                    n1:layout_height="wrap_content"
                                    n1:padding="2.0dip"
                                    n1:text="Total Fee"
                                    n1:textColor="#ffffffff" />

                                <View
                                    n1:layout_width="fill_parent"
                                    n1:layout_height="0.5dip"
                                    n1:background="#ffffffff" />

                                <TextView
                                    n1:id="@+id/total_fee"
                                    n1:layout_width="wrap_content"
                                    n1:layout_height="wrap_content"
                                    n1:padding="2.0dip"
                                    n1:textColor="#ffffffff"
                                    n1:textStyle="bold" />
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_marginLeft="20.0dip"
                            n1:layout_marginRight="20.0dip"
                            n1:layout_weight="1.0"
                            n1:background="@drawable/borders_more_corner">

                            <LinearLayout
                                n1:layout_width="fill_parent"
                                n1:layout_height="fill_parent"
                                n1:background="@drawable/corner_rectangle"
                                n1:backgroundTint="#fff04a4a"
                                n1:gravity="center"
                                n1:orientation="vertical"
                                n1:paddingLeft="20.0dip"
                                n1:paddingTop="5.0dip"
                                n1:paddingRight="20.0dip"
                                n1:paddingBottom="5.0dip">

                                <TextView
                                    n1:layout_width="wrap_content"
                                    n1:layout_height="wrap_content"
                                    n1:padding="2.0dip"
                                    n1:text="Due Fee"
                                    n1:textColor="#ffffffff" />

                                <View
                                    n1:layout_width="fill_parent"
                                    n1:layout_height="0.5dip"
                                    n1:background="#ffffffff" />

                                <TextView
                                    n1:id="@+id/due_fee"
                                    n1:layout_width="wrap_content"
                                    n1:layout_height="wrap_content"
                                    n1:padding="2.0dip"
                                    n1:textColor="#ffffffff"
                                    n1:textStyle="bold" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="fill_parent"
                    n1:background="@color/background"
                    n1:orientation="vertical">

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_margin="@dimen/_10sdp">

                        <TextView
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center_vertical"
                            n1:gravity="left"
                            n1:text="Name : "
                            n1:textSize="16.0sp" />

                        <TextView
                            n1:id="@+id/name"
                            n1:layout_width="0.0dip"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center_vertical"
                            n1:layout_weight="1.0"
                            n1:gravity="left"
                            n1:textSize="17.0sp"
                            n1:textStyle="bold" />

                        <LinearLayout
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center_vertical">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:layout_gravity="center_vertical"
                                n1:gravity="center"
                                n1:text="Roll No : "
                                n1:textSize="16.0sp" />

                            <TextView
                                n1:id="@+id/roll"
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:layout_gravity="center_vertical"
                                n1:gravity="center"
                                n1:textSize="17.0sp"
                                n1:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        n1:layout_width="fill_parent"
                        n1:layout_height="0.5dip"
                        n1:background="#55000000" />

                    <LinearLayout
                        n1:id="@+id/layout_pay"
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:orientation="vertical"
                        n1:visibility="gone">

                        <TextView
                            style="@style/Textview_Style_Header"
                            n1:layout_margin="20.0dip"
                            n1:lineSpacingMultiplier="1.3"
                            n1:padding="@dimen/_10sdp"
                            n1:text="Select Payment Method"
                            n1:textStyle="normal" />

                        <com.apps.smartschoolmanagement.utils.ButtonTouchEffect
                            n1:id="@+id/btn_pay"
                            style="@style/Button_Style"
                            n1:layout_gravity="center_horizontal"
                            n1:background="@drawable/corner_rectangle"
                            n1:backgroundTint="#ff6bc352"
                            n1:paddingLeft="@dimen/_35sdp"
                            n1:paddingRight="@dimen/_35sdp"
                            n1:text="Pay FEE with PayUmoney" />

                        <ImageView
                            n1:layout_width="wrap_content"
                            n1:layout_height="wrap_content"
                            n1:layout_gravity="center"
                            n1:layout_margin="20.0dip"
                            n1:background="@drawable/img_payments" />

                        <FrameLayout
                            n1:layout_width="fill_parent"
                            n1:layout_height="fill_parent"
                            n1:background="@color/background">

                            <TextView
                                n1:layout_width="wrap_content"
                                n1:layout_height="wrap_content"
                                n1:layout_gravity="center"
                                n1:layout_margin="5.0dip"
                                n1:background="@drawable/corner_round"
                                n1:backgroundTint="#ffdddddd"
                                n1:drawableLeft="@drawable/img_lock_small"
                                n1:drawablePadding="5.0dip"
                                n1:gravity="center"
                                n1:paddingLeft="10.0dip"
                                n1:paddingTop="4.0dip"
                                n1:paddingRight="10.0dip"
                                n1:paddingBottom="4.0dip"
                                n1:text="Your Payment information is secure" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>