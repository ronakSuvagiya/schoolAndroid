<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="wrap_content"
    n1:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n2:cardCornerRadius="@dimen/_5sdp"
        n2:cardElevation="@dimen/_6sdp"
        n2:cardPreventCornerOverlap="false">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:orientation="vertical">

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:background="@drawable/gradient"
                n1:orientation="vertical">

                <androidx.cardview.widget.CardView
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:layout_marginBottom="@dimen/_10sdp"
                    n2:cardBackgroundColor="@color/transparent"
                    n2:cardCornerRadius="@dimen/_5sdp"
                    n2:cardElevation="@dimen/_5sdp"
                    n2:contentPadding="@dimen/_10sdp">

                    <LinearLayout
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:orientation="vertical">

                        <ImageButton
                            n1:id="@+id/btn_close"
                            n1:layout_width="@dimen/_35sdp"
                            n1:layout_height="@dimen/_35sdp"
                            n1:layout_gravity="right"
                            n1:background="@color/transparent"
                            n1:foreground="@drawable/toucheffect_rectangle"
                            n1:src="@mipmap/ic_close_grey600_24dp"
                            n1:textColor="@color/purple300"
                            n1:textSize="@dimen/_12ssp"
                            n1:tint="@color/black" />

                        <ImageView
                            n1:layout_width="@dimen/_50sdp"
                            n1:layout_height="@dimen/_50sdp"
                            n1:layout_gravity="center"
                            n1:layout_marginTop="@dimen/_20sdp"
                            n1:src="@drawable/nointernet" />

                        <TextView
                            style="@style/Textview_Style_Header"
                            n1:layout_gravity="center"
                            n1:layout_marginTop="@dimen/_10sdp"
                            n1:fontFamily="sans-serif"
                            n1:gravity="center"
                            n1:text="NO INTERNET"
                            n1:textAllCaps="true"
                            n1:textColor="@color/jet_black2"
                            n1:textSize="@dimen/_20ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    n1:id="@+id/message"
                    style="@style/Textview_Style_Header"
                    n1:layout_gravity="center_horizontal"
                    n1:fontFamily="@font/ubuntu_regular"
                    n1:padding="@dimen/_10sdp"
                    n1:text="You have either not Connected to any Network or Your Internet Speed is too Slow. Please Switch Network."
                    n1:textAlignment="center"
                    n1:textColor="@color/red300"
                    n1:textSize="@dimen/_13ssp" />

                <View
                    n1:layout_width="fill_parent"
                    n1:layout_height="1.0dip"
                    n1:layout_marginTop="@dimen/_25sdp"
                    n1:background="#33000000" />

                <FrameLayout
                    n1:id="@+id/btn_connect"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:clickable="true"
                    n1:foreground="@drawable/toucheffect_rectangle">

                    <Button
                        n1:id="@+id/button"
                        style="@style/Button_Style"
                        n1:layout_height="@dimen/_45sdp"
                        n1:layout_gravity="center"
                        n1:background="@color/transparent"
                        n1:clickable="false"
                        n1:drawableLeft="@drawable/ic_wifi_blue"
                        n1:drawablePadding="@dimen/_15sdp"
                        n1:elevation="0.0dip"
                        n1:focusable="false"
                        n1:focusableInTouchMode="false"
                        n1:fontFamily="sans-serif"
                        n1:inputType="textCapWords"
                        n1:outlineProvider="none"
                        n1:text="Switch Network"
                        n1:textAllCaps="true"
                        n1:textColor="@color/jet_black"
                        n1:textSize="@dimen/_15ssp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>