<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent">

    <ScrollView
        style="@style/Scrollview_Style"
        n1:background="@color/background">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:layout_margin="16.0dip"
            n1:orientation="vertical">

            <com.apps.smartschoolmanagement.utils.EditTextClearable
                n1:id="@+id/date"
                n1:layout_width="fill_parent"
                n1:layout_height="@dimen/_40sdp"
                n1:layout_marginBottom="30.0dip"
                n1:background="@drawable/borders_rltb_white_background"
                n1:clickable="true"
                n1:editable="false"
                n1:focusableInTouchMode="false"
                n1:gravity="center"
                n1:hint="Select Date"
                n1:inputType="date"
                n1:paddingLeft="@dimen/_10sdp"
                n1:paddingRight="@dimen/_10sdp"
                n1:singleLine="true"
                n1:textColor="#ff000000"
                n1:textColorHint="#99000000" />

            <androidx.cardview.widget.CardView xmlns:n2="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n2:cardCornerRadius="@dimen/_6sdp"
                n2:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb"
                    n1:orientation="vertical"
                    n1:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/Textview_Style_Header"
                        n1:layout_marginBottom="@dimen/_8sdp"
                        n1:gravity="left"
                        n1:text="English"
                        n1:textSize="20.0sp" />

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:lineSpacingMultiplier="1.3"
                        n1:text="1. Write any 5 Rhymes\n2. Read and Write Alphabets"
                        n1:textSize="16.0sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n3="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n3:cardCornerRadius="@dimen/_6sdp"
                n3:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb"
                    n1:orientation="vertical"
                    n1:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/Textview_Style_Header"
                        n1:layout_marginBottom="@dimen/_8sdp"
                        n1:gravity="left"
                        n1:text="Mathematics"
                        n1:textSize="20.0sp" />

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:lineSpacingMultiplier="1.3"
                        n1:text="Read and write 10th Table"
                        n1:textSize="16.0sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:n4="http://schemas.android.com/apk/res-auto"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_8sdp"
                n4:cardCornerRadius="@dimen/_6sdp"
                n4:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb"
                    n1:orientation="vertical"
                    n1:padding="@dimen/_8sdp">

                    <TextView
                        style="@style/Textview_Style_Header"
                        n1:layout_marginBottom="@dimen/_8sdp"
                        n1:gravity="left"
                        n1:text="Science"
                        n1:textSize="20.0sp" />

                    <TextView
                        n1:layout_width="fill_parent"
                        n1:layout_height="wrap_content"
                        n1:layout_gravity="center"
                        n1:lineSpacingMultiplier="1.3"
                        n1:text="1. Write any 5  Tree names and Flower names\n2. Write any 10 Animal names"
                        n1:textSize="16.0sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ListView
                n1:id="@+id/listview_assignments"
                style="@style/ListView_Style" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>