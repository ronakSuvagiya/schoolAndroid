<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:id="@+id/coordinatorlayout"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent">

    <ScrollView
        style="@style/Scrollview_Style"
        n1:background="@color/background">

        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:orientation="vertical"
            n1:padding="@dimen/_12sdp">

            <LinearLayout
                n1:id="@+id/layout_selection"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_16sdp"
                n1:orientation="vertical">

                <FrameLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb_white_background">

                    <Spinner
                        n1:id="@+id/spnr_class"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:entries="@array/class_no"
                        n1:paddingLeft="@dimen/_4sdp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                n1:id="@+id/action_view"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_16sdp"
                n1:gravity="center">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginRight="@dimen/_10sdp"
                    n1:background="@drawable/dotted_underline"
                    n1:paddingLeft="@dimen/_4sdp"
                    n1:paddingRight="@dimen/_4sdp"
                    n1:text="Sort By"
                    n1:textSize="18.0sp"
                    n1:textStyle="bold" />

                <FrameLayout
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb_white_background"
                    n1:padding="1.0dip">

                    <Spinner
                        n1:id="@+id/spnr_year"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:entries="@array/year"
                        n1:paddingLeft="@dimen/_10sdp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_marginBottom="@dimen/_16sdp"
                n1:gravity="center">

                <TextView
                    n1:layout_width="wrap_content"
                    n1:layout_height="wrap_content"
                    n1:layout_marginRight="@dimen/_10sdp"
                    n1:background="@drawable/dotted_underline"
                    n1:paddingLeft="@dimen/_4sdp"
                    n1:paddingRight="@dimen/_4sdp"
                    n1:text="Sort By"
                    n1:textSize="18.0sp"
                    n1:textStyle="bold" />

                <FrameLayout
                    n1:id="@+id/layout_spnr_month"
                    n1:layout_width="fill_parent"
                    n1:layout_height="wrap_content"
                    n1:background="@drawable/borders_rltb_white_background"
                    n1:padding="1.0dip">

                    <Spinner
                        n1:id="@+id/spnr_month"
                        n1:layout_width="fill_parent"
                        n1:layout_height="@dimen/_35sdp"
                        n1:alpha="0.7"
                        n1:entries="@array/months"
                        n1:paddingLeft="@dimen/_10sdp" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                n1:id="@+id/error"
                style="@style/TextFields_Error"
                n1:text="No records Found" />

            <ListView
                n1:id="@+id/listview_exams"
                style="@style/ListView_Style" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_loading" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>